@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<h2>Iniciar sesión</h2>

<form asp-action="Login" method="post">
    <label>Correo institucional</label>
    <input name="Correo_institucional" class="form-control" />

    <label>Contraseña</label>
    <input name="Contrasena" type="password" class="form-control" />

    <button type="submit" class="btn btn-primary">Ingresar</button>
    <a asp-action="Registro">¿No tienes cuenta? Registrarme</a>
</form>

@if (!string.IsNullOrEmpty(ViewBag.MensajeError))
{
    <p class="text-danger">@ViewBag.MensajeError</p>
}
@if (!string.IsNullOrEmpty(ViewBag.MensajeExito))
{
    <p class="text-success">@ViewBag.MensajeExito</p>
}
