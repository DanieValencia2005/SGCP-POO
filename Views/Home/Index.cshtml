@{
    ViewData["Title"] = "Interfaz Principal";
    string rol = "Estudiante";
}

<style>
    .sidebar {
        background-color: #e3f2fd;
        min-height: 100vh;
        padding-top: 1.5rem;
    }

    .sidebar .nav-link {
        color: #0d6efd;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .sidebar .nav-link:hover {
        background-color: #cfe2ff;
        border-radius: 5px;
    }

    .main-content {
        background-color: #f8f9fa;
        padding: 2rem;
    }

    .info-card {
        background-color: white;
        border-left: 5px solid #0d6efd;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    h2, h5 {
        color: #0d6efd;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 sidebar">
            <h5 class="text-center">Menú Principal</h5>
            <ul class="nav flex-column mt-4 px-3">
                @if (rol == "Estudiante")
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#">Configuración de cuenta</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Programación Orientada a Objetos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Personalización</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Información del proyecto</a>
                    </li>
                }
                else if (rol == "Administrador")
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#">Programación Orientada a Objetos</a>
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-9 main-content">
            <div class="info-card">
                <h2>Bienvenido al Sistema de gestión del conocimiento para estudiantes de programación orientada a objetos (POO)</h2>
                <p class="mt-3">
                    Esta interfaz permite acceder a las funcionalidades principales del sistema. Utilice el menú lateral para navegar por las secciones disponibles.
                </p>

                @if (rol == "Estudiante")
                {
                    <ul>
                        <li><strong>Configuración de cuenta:</strong> gestiona tu información personal.</li>
                        <li><strong>Programación Orientada a Objetos:</strong> accede a contenidos.</li>
                        <li><strong>Personalización:</strong> ajusta el diseño del sistema.</li>
                        <li><strong>Información del proyecto:</strong> consulta los objetivos y estructura.</li>
                    </ul>
                }
                else if (rol == "Administrador")
                {
                    <ul>
                        <li><strong>Programación Orientada a Objetos:</strong> gestiona contenidos y usuarios.</li>
                    </ul>
                }

                <p class="mt-4 text-muted">Seleccione una opción para continuar.</p>
            </div>
        </div>
    </div>
</div>
