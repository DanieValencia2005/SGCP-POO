<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGCP_POO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SGCP_POO.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #e3f2fd;
            min-height: 100vh;
            padding-top: 1.5rem;
        }

        .sidebar .nav-link {
            color: #0d6efd;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .sidebar .nav-link:hover {
            background-color: #cfe2ff;
            border-radius: 5px;
        }

        .main-content {
            background-color: #f8f9fa;
            padding: 2rem;
        }

        .info-card {
            background-color: white;
            border-left: 5px solid #0d6efd;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        h2, h5 {
            color: #0d6efd;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">SGCP_POO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-semibold" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-success fw-semibold" asp-controller="Login" asp-action="Registro">Registrarse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-success fw-semibold" asp-controller="Informacions" asp-action="Actualizar">Registrarse</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3 bg-light">
        <div class="container text-center">
            &copy; 2025 - SGCP_POO - <a asp-controller="Home" asp-action="Privacy">Política de privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
