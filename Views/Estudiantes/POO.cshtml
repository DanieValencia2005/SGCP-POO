@{
    ViewData["Title"] = "POO";

    var rol = Context.Session.GetString("Rol");
}

<div class="row flex-nowrap" id="menuRow">
    <div id="sidebar" class="col-md-3 sidebar">
        <h5 class="text-center">Menú Principal</h5>
        <ul class="nav flex-column mt-4 px-3">
            @if (rol == "Estudiante")
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Estudiantes" asp-action="GuardarRecurso">Guardar Recurso</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Estudiantes" asp-action="BuscarRecursos">Buscar recurso</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Estudiantes" asp-action="AreaEstudio">
                        Área de Estudio
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Estudiantes" asp-action="Repositorio">
                        Repositorio de Conocimiento
                    </a>
                </li>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    Volver a Home
                </a>


            }
            else if (rol == "Administrador")
            {
                <li class="nav-item"><a class="nav-link" href="#">Gestión de contenidos</a></li>
            }
        </ul>
    </div>

    <div id="mainContent" class="col-md-9 main-content">
        <div class="info-card">
            <h2>Bienvenido al Sistema de gestión del conocimiento</h2>
            <p class="mt-3">Utiliza el menú lateral para navegar por las secciones disponibles.</p>

            <p class="mt-4 text-muted">Seleccione una opción para continuar.</p>
        </div>
    </div>
</div>
