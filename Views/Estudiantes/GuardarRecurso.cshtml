@model SGCP_POO.Models.Recurso

@{
    ViewData["Title"] = "Guardar Recurso";
}

@if (ViewBag.Message != null)

{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<div class="container mt-3">


    <div class="d-flex gap-2 mb-3">
        <a asp-controller="Estudiantes" asp-action="POO" class="btn btn-outline-primary">
          Volver a POO
        </a>
    </div>

    <h1 class="text-center mb-4">Agregar recurso</h1>

    <form asp-action="GuardarRecurso" asp-controller="Estudiantes" method="post" class="card shadow p-4">
        <input type="hidden" asp-for="IdEstudiante" />

        <div class="mb-3">
            <label asp-for="Titulo" class="form-label"></label>
            <input asp-for="Titulo" class="form-control" placeholder="Título del recurso" required />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"
                      placeholder="Descripción del recurso" required></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PalabrasClave" class="form-label"></label>
            <input asp-for="PalabrasClave" class="form-control" placeholder="Ej: programación, POO" required />
            <span asp-validation-for="PalabrasClave" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tema" class="form-label"></label>
            <select asp-for="Tema" class="form-select" required>
                <option value="">Seleccione...</option>
                <option value="fundamentos">Fundamentos</option>
                <option value="clases">Clases</option>
                <option value="objetos">Objetos</option>
                <option value="herencia">Herencia</option>
                <option value="polimorfismo">Polimorfismo</option>
                <option value="abstraccion">Abstracción</option>
                <option value="encapsulamiento">Encapsulamiento</option>
                <option value="interfaces">Interfaces</option>
                <option value="constructores">Constructores</option>
                <option value="metodos">Métodos</option>
                <option value="atributos">Atributos</option>
            </select>
            <span asp-validation-for="Tema" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Dificultad" class="form-label"></label>
            <select asp-for="Dificultad" class="form-select" required>
                <option value="">Seleccione...</option>
                <option value="alta">Alta</option>
                <option value="media">Media</option>
                <option value="baja">Baja</option>
            </select>
            <span asp-validation-for="Dificultad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Formato" class="form-label"></label>
            <select asp-for="Formato" class="form-select" required>
                <option value="">Seleccione...</option>
                <option value="video">Video</option>
                <option value="articulo">Artículo</option>
                <option value="enlace">Enlace</option>
                <option value="documento">Documento</option>
                <option value="ejemplo">Ejemplo de código</option>
                <option value="otro">Otro</option>
            </select>
            <span asp-validation-for="Formato" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Enlace" class="form-label"></label>
            <input asp-for="Enlace" type="url" class="form-control" placeholder="Enlace de consulta" required />
            <span asp-validation-for="Enlace" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Ingresar conocimiento</button>
    </form>

    <p class="text-muted text-center mt-3">Todos los campos son obligatorios para registrar el recurso.</p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
